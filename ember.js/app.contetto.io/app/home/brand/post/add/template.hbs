<div class="main-center newest-tsks">
  <div class="wrapes-inbox">
    <p class="inbox">
      <span class="feeds-icons">
        <i class="fa fa-list" aria-hidden="true"></i>
      </span>
      Post
      <ul class="pull-right">
        <li>Help</li>
        <li>Tutarials</li>
        <li>Quick chat</li>
      </ul>
    </p>
  </div>
  <div class="default-model1 default-model">
    <div class="modelbox-body">
      <div class="right-panel new-com-res">
        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane active">
            <div class="homepost-page row">
              <div class="col-md-7 col-lg-8 col-sm-12 col-xs-12">
                <div class="btn-group" role="group" aria-label="...">
                  <div class="dropdown">
                    {{#x-select value=campaign id="campaign-name" class="form-control"}}
                      <option value="">Campaign</option>

                      {{#each model.campaigns as |campaign|}}
                        {{#x-option value=campaign.id}} {{campaign.name}} {{/x-option}}
                      {{/each}}
                    {{/x-select}}
                  </div>
                </div>

                <div class="btn-group" role="group" aria-label="...">
                  <div class="dropdown">

                    {{#x-select value=category id="category-name" class="form-control"}}
                      <option value="">Category</option>

                      {{#each model.categories as |category|}}
                        {{#x-option value=category.id}} {{category.title}} {{/x-option}}
                      {{/each}}
                    {{/x-select}}
                  </div>
                </div>

                <div class="btn-group" role="group" aria-label="...">
                  <div class="dropdown">
                    <button
                      class="btn btn-default btn-default1 dropdown-toggle"
                      type="button"
                      id="dropdownMenu1"
                      data-toggle="dropdown"
                      aria-haspopup="true"
                      aria-expanded="true">

                      Tags
                    </button>
                  </div>
                </div>
                <div class="btn-group" role="group" aria-label="...">
                  <div class="dropdown">

                    {{#x-select value=account id="account-name" class="form-control" multiple=true}}
                      {{#each model.accounts as |account|}}
                        {{#x-option value=account.id}} {{account.title}} {{/x-option}}
                      {{/each}}
                    {{/x-select}}
                  </div>
                </div>

                <div class="row">
                  <div class="control-label col-md-1 text-right"></div>
                  <div class="form-group col-md-12 ckeditor-main">
                    {{ember-ckeditor value=content on-change="contentChanged"}}
                  </div>
                </div>

                <div class="row post-space">
                  <span class="col-md-4 col-xs-12">
                    Related Articles:
                    <a>16</a>
                  </span>
                  <span class="col-md-4 col-xs-12">
                    Related Topics:
                  </span>
                  <span class="col-md-4 col-xs-12">
                    <span class="pos">
                      Positive
                    </span>
                    38%
                  </span>
                </div>
                <div class="row">
                  <label class="col-md-4 col-sm-6 conrrol-label">GOAL of this post</label>
                  <div class="form-group col-md-8 col-sm-6">
                    {{input type="text" class="form-control" value=title}}
                  </div>

                  <div class="col-md-12">
                    <pre class="pre_block"><i class="glyphicon glyphicon-file"></i> Templates  <i class="glyphicon glyphicon-star"></i> Suggested Topics  <i class="glyphicon glyphicon-volume-up"></i> <span class="warning_bdg">Warnings<span class="badge">4</span></span>   <i class="glyphicon glyphicon-paperclip pull-right"></i></pre>
                  </div>
                </div>

                <div class="btn-group">
                  <button type="button" {{action 'save' 'draft'}} class="btn btn1">
                    Draft
                  </button>
                </div>

                <div class="btn-group">
                  <button type="button" {{action 'save' 'task'}} class="btn btn-info btn1">
                    Task
                  </button>
                </div>
                <div class="btn-group">
                  <button type="button" {{action 'save' 'schedulePost'}} class="btn btn-success btn1">
                    Schedule
                  </button>
                </div>
                <div class="btn-group">
                  <button type="button" {{action 'save' 'reviewRequest'}} class="btn btn-warning btn1">
                    Request Review
                  </button>
                </div>
              <div class="btn-group">
                <button type="button" {{action "cancel"}} class="btn btn-danger btn1">
                  Cancel
                </button>
              </div>
            </div>

            <div class="col-md-5 col-lg-4 col-sm-12">
              {{bootstrap-datepicker-inline todayHighlight=true clearBtn=true value=myDate format='YYYY-MM-DD'}}

              <div class="post_datedescription">
                <h4>Next Recommended Post</h4>
                <a href="#">
                  <i class="fa fa-facebook"></i>
                  Gorgeous facebook <br> March 15 @2016
                </a>
                <button class="btn btn-success">Select</button>
              </div>

              {{#bs-datetimepicker format='hh:mm a' date=myTime}}
                {{input id="dueDate" class="form-control" value=myTime name="Date" placeholder="Due date"}}
              {{/bs-datetimepicker}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
