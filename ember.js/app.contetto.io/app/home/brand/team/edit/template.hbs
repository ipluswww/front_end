<div class="row">
  <div class="col-md-3 col-sm-12 reviewfow_tabs">
    {{brand-team-tab}}
  </div>
  <div class="col-md-9 col-sm-12">
    <div class="tab-content">
      <div class="tab-pane active">
        <!-- <h3 class="model-heading">Brand add</h3> -->
        <div class="col-md-12">
          <form class="form-horizontal" {{action "updateMember" on="submit"}}>
            <div class="form-group">
              <label for="username" class="col-md-3 control-label">User Email</label>
              <div class="col-md-9">
                {{input type="text" class="form-control" id="username" placeholder="Search" value=model.member.email readonly=true}}
              </div>
            </div>
            <div class="form-group">
              <label for="assignRole" class="col-md-3 control-label">User Role</label>
              <div class="col-md-9">

                {{#x-select value=model.roleId id="role-name" class="form-control" }}
                  <option value="">Select Role</option>
                  {{#each model.roles as |role|}}
                    {{#x-option value=role.id }} {{role.name}} {{/x-option}}
                  {{/each}}
                {{/x-select}}
                {{#each model.errors.role as |error|}}
                  <span class="help-block">{{error.message}}</span>
                {{/each}}
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-success  text-uppercase">Update</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
