<div class="main-center newest-tsks">
	<div class="wrapes-inbox">
        <p class="inbox"><!-- <span class="feeds-icons"><i class="fa fa-list" aria-hidden="true"></i></span> -->Feeds
        <ul class="pull-right">
            <li>Help</li>
            <li>Tutarials</li>
            <li>Quick chat</li>
        </ul>
        </p>
    </div>
	<div class="default-model tsk-details">
	    <div class="modelbox-body sec-mods">
	        <div class="full-panel--task">
	          <!-- Tab panes -->
	          	<div class="tab-content">
	            	<div class="tab-pane active">
	            		<h3 class="model-heading text-center">Create New Reminder</h3>
						<div class="wrps-feeds reminder-wrps">
							<div class="col-sm-12 col-md-6 col-xs-12"> <!-- Subject & due date -->
								<p class="links-txt">Reminder on:<span class="txt-blds">ITEM NAME</span></p>
								<p class="links-txt">Reminder for:</p>
								<p class="links-txt"><label class="rmds-ns"><input type="checkbox"> me</label></p>
								<p class="links-txt"><label class="rmds-ns"><input type="checkbox"> Team</label></p>
								<p class="links-txt">
									<input type="text" placeholder="Enter Name">
									<button type="submit" class="btn btn-success  text-uppercase send-buttons">ADD</button>
								</p>
							</div>
							<div class="col-sm-12 col-md-6 col-xs-12 checklbl text-right"> <!-- Subject & due date -->
								<p class="links-txt right-alig remind-select">
									<label>Remind me:
										<select name="selection">
										  <option value="volvo">1 hour</option>
										  <option value="saab">Tomorrow</option>
										  <option value="fiat">Choose item</option>
										</select>
									</label>
								</p>
								<p class="links-txt inp-txt right-alig">
									<input type="text" placeholder="4">
									<input type="text" placeholder="30">
									<input type="text" placeholder="PM">
								</p>
							</div>
							<div class="col-md-12 col-sm-12 col-xs-12 remind-div">
								<p class="links-txt right-alig">
									 {{ember-ckeditor value=text}} 
								</p>
								<button type="submit" class="btn btn-success  text-uppercase send-buttons">Save</button>
							</div>
						</div>
	            	</div>
	          	</div>
	        </div>
	        <div class="clearfix"></div>
	    </div>
	</div>
</div>
